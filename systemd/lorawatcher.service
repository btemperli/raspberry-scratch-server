 [Unit]
 Description=LoRa Watcher Service
 After=multi-user.target

 [Service]
 Type=simple
 Environment="DISPLAY=:0"
 Environment="XAUTHORITY=/home/pi/.Xauthority"
 ExecStart=/usr/bin/python3 /home/pi/raspberry-scratch-server/Watcher.py
 KillMode=process
 SendSIGHUP=no
 Restart=always
 RestartSec=5

 [Install]
 WantedBy=graphical.target